.down-view-catgegory {
  width: 100%;
  text-align: center;
  border-bottom: 2rpx solid lightgray;
}


.down-view-catgegory:last-child {
  border-bottom:none;
}


.detail-view-hide {
  height: 0rpx;
  display: none;
}


.appointmentInfo {
  display: flex;
  flex-direction: column;
  margin-top: 200rpx;
}

.appointmentInfo text {
   font-size: 28rpx;
