.container {
  background-color:#efeff4;
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
  min-height: 100vh;
}

.category-item {
  width: 100%;
  background-color: #efeff4;
}

.detail-item {
  margin: 20rpx 20rpx;
  margin-bottom: 30rpx;
  background-color:white;
  flex-direction: column;
  display: flex;
  border-radius: 10rpx;
}

.detail-item text{
  font-size: 28rpx;
  margin: 20rpx 20rpx;
  
}

.detail-video {
  margin: 0rpx 20rpx;
}

.detail-video video {
  width: 100%;
}

